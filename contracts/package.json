{
  "name": "liqpass-checkout-contracts",
  "version": "1.0.0",
  "description": "LiqPass Checkout USDC Smart Contracts for Base Network",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "deploy:base": "npx hardhat run deploy.js --network base",
    "deploy:sepolia": "npx hardhat run deploy.js --network baseSepolia",
    "deploy:local": "npx hardhat run deploy.js --network localhost",
    "verify:base": "npx hardhat verify --network base",
    "verify:sepolia": "npx hardhat verify --network baseSepolia",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "clean": "npx hardhat clean",
    "node": "npx hardhat node"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "base",
    "usdc",
    "defi"
  ],
