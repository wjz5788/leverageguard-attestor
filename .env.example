# LiqPass 环境变量配置模板
# 复制此文件为 .env 并填写实际值

# ========================
# 支付配置 (PR#1 启动校验)
# ========================

# 支付金库地址 (必须配置，不能是黑洞地址)
PAYMENT_VAULT_ADDRESS=0xYourVaultAddressHere

# 链ID (必须配置，支持十进制或十六进制格式)
PAYMENT_CHAIN_ID=8453

# USDC合约地址 (必须配置，不能是黑洞地址)
USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# ========================
# 服务器配置
# ========================

# 服务器端口
PORT=3002

# 服务器主机
HOST=0.0.0.0

# 运行环境
NODE_ENV=development

# ========================
# 数据库配置
# ========================

# 数据库连接URL
DB_URL=./data/liqpass.db

# ========================
# JWT配置
# ========================

# JWT密钥 (生产环境必须配置)
JWT_SECRET=your-super-secret-jwt-key-here

# ========================
# 验证服务配置
# ========================

# 验证服务基础URL
JP_VERIFY_BASE_URL=http://127.0.0.1:8082

# ========================
# 其他配置
# ========================

# 日志级别
LOG_LEVEL=info

# ========================
# 链配置（新增）
# ========================

# Base RPC 端点
BASE_RPC=https://mainnet.base.org

# CheckoutUSDC 合约地址
CHECKOUT_USDC_ADDRESS=0xc423c34b57730ba87fb74b99180663913a345d68

# 金库地址
TREASURY_ADDRESS=0xaa1f4df6fc3ad033cc71d561689189d11ab54f4b
