# 服务器配置
PORT=3002
NODE_ENV=development

# 数据库配置
DB_URL=sqlite:./data/liqpass.db
# 或者使用PostgreSQL
# DB_URL=postgresql://username:password@localhost:5432/liqpass

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# API密钥加密配置 (AES-256-GCM)
# 生成命令: openssl rand -base64 32
KMS_KEY=your-32-byte-base64-encryption-key-here

# 验证服务配置
VERIFY_SERVICE_BASE=http://localhost:8081
# jp-verify 服务（用于 /api/v1/verify/okx 代理）
JP_VERIFY_BASE_URL=http://127.0.0.1:8082

# 交易所API密钥（用于测试）
OKX_KEY=your-okx-api-key
OKX_SECRET=your-okx-secret
OKX_PASSPHRASE=your-okx-passphrase

BINANCE_KEY=your-binance-api-key
BINANCE_SECRET=your-binance-secret

HYPERLIQUID_KEY=your-hyperliquid-api-key
HYPERLIQUID_SECRET=your-hyperliquid-secret

# 验证参数
MAX_SKEW_MS=60000
ARITH_EPS=0.000001
ATTEST_ONCHAIN=false
